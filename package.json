  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcostarodrigo/ask.git"
  },
  "keywords": [
    "cli",
    "args",
    "parser"
  ],
  "author": "Rodrigo Fernandes da Costa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fcostarodrigo/ask/issues"
  },
  "homepage": "https://github.com/fcostarodrigo/ask#readme",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/yargs": "^17.0.32",
    "husky": "^9.0.11",
    "knip": "^5.11.0",
    "xo": "^0.58.0"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "fuzzy": "^0.1.3",
    "yargs": "^17.7.2"
  },
  "xo": {
    "prettier": true
  },
  "prettier": {
    "singleQuote": false,
