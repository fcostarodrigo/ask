{
  "name": "@fcostarodrigo/ask",
  "version": "3.1.0",
  "description": "Wrapper of yargs and enquirer to ask user for input.",
  "main": "src/index.js",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "types": "src/index.d.ts",
  "scripts": {
    "test": "knip && xo --fix src",
