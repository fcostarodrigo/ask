{
  "name": "@fcostarodrigo/ask",
  "version": "3.1.0",
  "description": "Wrapper of yargs and enquirer to ask user for input.",
  "main": "src/index.js",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "types": "src/index.d.ts",
  "scripts": {
    "test": "vitest run",
    "lint": "xo src",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fcostarodrigo/ask.git"
  },
  "keywords": [
    "cli",
    "args",
    "parser"
  ],
  "author": "Rodrigo Fernandes da Costa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fcostarodrigo/ask/issues"
  },
  "homepage": "https://github.com/fcostarodrigo/ask#readme",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "vitest": "^1.4.0",
    "xo": "^0.58.0"
  },
  "dependencies": {
    "change-case": "^5.4.3",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "fuzzy": "^0.1.3",
    "yargs": "^17.7.2"
  },
  "xo": {
    "rules": {
      "unicorn/better-regex": "off",
      "no-await-in-loop": "off",
      "no-useless-escape": "off",
      "unicorn/no-await-expression-member": "off",
      "capitalized-comments": "off"
    },
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --no-error-on-unmatched-pattern --ignore-unknown --write"
    ],
    "*.{js,jsx,mjs}": [
      "xo src --fix",
      "vitest --run related"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 100
  }
}
